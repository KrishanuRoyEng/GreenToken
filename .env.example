# ==================================
# GreenToken - Environment Configuration
# ==================================
# Copy this file to .env and update values as needed

# ----- Environment -----
NODE_ENV=development

# ----- Database (PostgreSQL) -----
POSTGRES_DB=blue_carbon_mrv
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password123
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# ----- Redis -----
REDIS_URL=redis://redis:6379

# ----- Backend Server -----
PORT=5000
JWT_SECRET=blue-carbon-jwt-secret-change-in-production
FRONTEND_URL=http://localhost:3000

# ----- IPFS -----
IPFS_HOST=ipfs
IPFS_PORT=5001
IPFS_PROTOCOL=http
IPFS_GATEWAY=http://localhost:8080/ipfs

# ----- Frontend (Vite) -----
VITE_API_URL=http://localhost:5000
VITE_WS_URL=ws://localhost:5000
VITE_IPFS_GATEWAY=http://localhost:8080/ipfs
VITE_APP_NAME=GreenToken
VITE_VERSION=1.0.0

# ----- Blockchain (Optional) -----
BLOCKCHAIN_RPC_URL=http://localhost:8545
ADMIN_PRIVATE_KEY=
PROJECT_REGISTRY_ADDRESS=
CARBON_CREDIT_TOKEN_ADDRESS=
SOULBOUND_TOKEN_ADDRESS=

# ----- Email (Optional) -----
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=