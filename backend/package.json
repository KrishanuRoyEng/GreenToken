{
  "name": "blue-carbon-mrv-backend",
  "version": "1.0.0",
  "description": "Backend for Blue Carbon MRV System",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "postinstall": "prisma generate || echo 'Prisma generate failed, will retry at runtime'",
    "prebuild": "prisma generate || echo 'Prisma generate failed during prebuild'",
    "migrate": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "generate": "prisma generate",
    "deploy:contracts": "npx hardhat run scripts/deploy.ts --network polygon",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.0.0",
    "@types/nodemailer": "^6.4.8",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.0.0",
    "ipfs-http-client": "^60.0.0",
    "joi": "^17.9.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.0",
    "prisma": "^5.0.0",
    "redis": "^4.6.0",
    "socket.io": "^4.7.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0",
    "uuid": "^13.0.0",
    "web3": "^4.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@openzeppelin/contracts": "^4.9.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.0",
    "@types/supertest": "^2.0.12",
    "hardhat": "^2.17.0",
    "jest": "^29.5.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}